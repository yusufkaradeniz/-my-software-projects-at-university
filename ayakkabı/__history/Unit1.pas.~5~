type
  TForm1 = class(TForm)
    Button1: TButton;

    Label1: TLabel;
    Label2: TLabel;
    Edit1: TEdit;
    Edit2: TEdit;
    Image1: TImage;

    procedure Button1Click(Sender: TObject);
    procedure Button2Click(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  Form1: TForm1;

implementation

{$R *.dfm}

uses Unit5;

procedure TForm1.Button1Click(Sender: TObject);
 begin
  if (Edit1.Text='admin') and (Edit2.Text='admin') or (Edit1.Text='kullanýcý') and (Edit2.Text='kullanýcý') then
  begin
  Form5 :=TForm5.Create(Application);
  Form5.ShowModal ;
  Form5.Free  ;
  end
    else

    begin
         ShowMessage('Kullanýcý Adý veya Sifre Hatalý!') ;
         Edit1.Clear;
         Edit2.Clear;

    end;


   end;

procedure TForm1.Button2Click(Sender: TObject);
begin
Close ;
end;


    end.